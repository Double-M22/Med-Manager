<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@color/blue_back"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Medication Name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/view_medication_name"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="8hrs"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:id="@+id/view_intervals"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:layout_toRightOf="@+id/view_medication_name"
        android:layout_toEndOf="@+id/view_medication_name"
        android:gravity="end"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Start : 22/01/2018"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:id="@+id/view_start"
        android:layout_below="@+id/view_medication_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="End : 22/01/2018"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:id="@+id/view_end"
        android:layout_below="@+id/view_medication_name"
        android:layout_toRightOf="@+id/view_start"
        android:layout_toEndOf="@+id/view_start"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="end"/>

</RelativeLayout>